{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"downlevelIteration": true,
		"noUnusedLocals": true,
		"experimentalDecorators": true,
		"noUnusedParameters": true,
		"strictNullChecks": true, /* !! cant assign null or undefined to any type as would be by default */
		"strictPropertyInitialization": true,
		"declaration": true,
		"baseUrl": "./src",
		"lib": [
			"dom",
			"es2016",
			"es2017.object"
		],
		"outDir": "dist"
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}
